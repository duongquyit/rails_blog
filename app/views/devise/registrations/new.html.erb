<div class="w-25 mx-auto mt-10 text-center form-signin">
  <h2 class="mb-3">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <div class="form-floating">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control rounded-top', placeholder: "name@example.com" %>
      <%= f.label :email, for: 'floatingInput' %>
    </div>

    <div class="form-floating">
      <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: "Password" %>
      <%= f.label :password, for: 'floatingInput' %>

    </div>

    <div class="form-floating">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control mb-3 rounded-bottom', placeholder: "PasswordConfirm" %>
      <%= f.label :password_confirmation, for: 'floatingInput' %>
    </div>
    
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="actions">
      <%= f.submit "Sign up", class: 'btn btn-primary w-100' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
