  <div class="form-signin w-25 mt-10 mx-auto">
    <h1 class="h3 mb-3 fw-normal w-100 text-center">Please signin</h1>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: ''}) do |f| %>
      <div class="form-floating">
        <%= f.text_field :signin, autofocus: true, class: 'form-control rounded-top', placeholder: "name@example.com"%>
        <%= f.label "Username or Email", for: 'floatingInput', class: 'text-center' %>
      </div>

      <div class="form-floating">
        <%= f.password_field :password, autocomplete: "current-password", class: 'form-control rounded-bottom mb-3', placeholder: "Password" %>
        <%= f.label :password, for: 'floatingInput', class: 'text-center' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="w-100 text-center checkbox mb-3">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions w-100 mb-3">
        <%= f.submit "Sign In", class: 'w-100 btn btn-lg btn-primary' %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>

    <%# omniauth-google-oauth2 1.0.x uses OmniAuth 2 and requires using HTTP Post to initiate authentication: %>
    <%= link_to "Sign in with Google", user_google_oauth2_omniauth_authorize_path, method: :post %>

    <%# omniauth-google-oauth2 prior 1.0.0: %>
    <%= link_to "Sign in with Google", user_google_oauth2_omniauth_authorize_path %>

    <%# Devise prior 4.1.0: %>

  </div>
